{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Gant-schedule",
  "version": "0.1.0",
  "identifier": "com.gant-schedule.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5174",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Gant-schedule",
        "width": 1400,
        "height": 750,
        "minWidth": 1000,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; img-src 'self' data: https:; connect-src 'self' https:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "© 2024 Gant-schedule",
    "category": "Productivity",
    "shortDescription": "ガントチャートスケジュール管理アプリ",
    "longDescription": "ガントチャートを使用した年間スケジュール管理アプリケーション",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "ja-JP"
      }
    }
  }
}
